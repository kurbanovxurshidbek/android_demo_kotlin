<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:width="5px" android:color="#c13584" android:dashWidth="3dp" android:dashGap="3dp" />
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:width="5px" android:color="#0000FF" android:dashWidth="5dp" android:dashGap="5dp" />
        </shape>
    </item>
</selector>